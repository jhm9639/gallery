<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="편집창 바꾸기" />

            <Button
                android:id="@+id/bRandomGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="갤러리에서 데이터 가져오기" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캡처" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bCenterCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지뷰 CenterCrop" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bFitCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지뷰 FitCenter" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFlexible"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone">

        <com.gallery.edit.FlexibleImageView
            android:id="@+id/fiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.gallery.edit.CropImageEditView
        android:id="@+id/ivCrop"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:elevation="1dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>